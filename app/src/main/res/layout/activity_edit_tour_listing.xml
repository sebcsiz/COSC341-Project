<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8BFD8">


    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Page title -->
            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit / Add Listing"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingTop="50dp"
                android:paddingBottom="16dp" />

            <!-- Status  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status *"
                    android:fontFamily="serif"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/helpStatus"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:text="\?"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_help_circle" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title *"
                    android:fontFamily="serif"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/helpTitle"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:text="\?"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_help_circle" />
            </LinearLayout>

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of winery / tour"
                android:fontFamily="serif"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_text_box"/>

            <!-- Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location *"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownHeight="500dp"
                android:dropDownVerticalOffset="0dp"
                android:dropDownWidth="350dp"
                android:hint="Address"
                android:fontFamily="serif"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_text_box"
                android:padding="10dp"
                android:inputType="text"
                android:completionThreshold="1" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description *"
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top|start"
                android:hint="Example: Best winery in the Okanagan"
                android:fontFamily="serif"
                android:inputType="textMultiLine"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_text_box"/>

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price *"
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ "
                    android:fontFamily="serif"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="$xxx.cc"
                    android:fontFamily="serif"
                    android:inputType="numberDecimal"
                    android:background="@drawable/rounded_text_box"/>
            </LinearLayout>

            <!-- Duration & Capacity row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration â² *"
                        android:fontFamily="serif"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hours : Minutes"
                        android:fontFamily="serif"
                        android:inputType="time"
                        android:background="@drawable/rounded_text_box"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capacity *"
                        android:textStyle="bold"
                        android:fontFamily="serif"/>

                    <EditText
                        android:id="@+id/etCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Max capacity"
                        android:fontFamily="serif"
                        android:inputType="number"
                        android:background="@drawable/rounded_text_box"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Photos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo ðŸ“· *"
                    android:fontFamily="serif"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/helpPhoto"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:text="\?"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_help_circle" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivPhotoPreview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:background="#DDDDDD"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnAddPhoto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+ Add photo"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:backgroundTint="#9856AD"/>

                <Button
                    android:id="@+id/btnRemovePhoto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remove photo"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#9856AD"/>
            </LinearLayout>

            <!-- Awards -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Awards ðŸ†"
                android:fontFamily="serif"
                android:textStyle="bold"/>

            <!-- This will show all award names -->
            <TextView
                android:id="@+id/tvAwardsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add awards to your listing."
                android:fontFamily="serif"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_text_box"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btnAddAward"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+ Add award"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:backgroundTint="#9856AD"/>

                <Button
                    android:id="@+id/btnClearAwards"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clear awards"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#9856AD"/>
            </LinearLayout>

            <!-- Save button -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save âœ”"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#8F00FF"/>

            <!-- Delete listing -->
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete âœ˜"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#BA110C"/>

            <!-- Cancel button -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel âŠ˜"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#8A8A8A"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Nav -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9"
        android:gravity="center"
        android:paddingBottom="18dp"
        android:background="#9E7BB5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/HomeButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="â¾•\nHome"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="sans-serif-smallcaps"
            android:backgroundTint="#9E7BB5"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/ListingsButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðƒ¯\nMy Tours"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:backgroundTint="#9E7BB5"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/ProfileButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="áŒ¸\nProfile"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:backgroundTint="#9E7BB5"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>