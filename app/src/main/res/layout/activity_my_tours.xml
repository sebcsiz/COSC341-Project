<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myToursRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8BFD8"
    tools:context=".MyToursActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleYourTours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:text="Your Tours"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tabs row -->
    <LinearLayout
        android:id="@+id/tabContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleYourTours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Upcoming tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tabUpcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Tours"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/underlineUpcoming"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/black"
                android:visibility="visible" />
        </LinearLayout>

        <!-- Past tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tabPast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Past Tours"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/underlinePast"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/black"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>


    <!-- Upcoming tour card (hidden if there are none) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upcomingTourCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tabContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/tvUpcomingName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tour name at Winery"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Date -->
        <TextView
            android:id="@+id/tvUpcomingDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date: Apr 12, 2024"
            android:fontFamily="serif"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvUpcomingName"
            app:layout_constraintStart_toStartOf="@id/tvUpcomingName"
            app:layout_constraintEnd_toEndOf="@id/tvUpcomingName" />

        <!-- Details -->
        <TextView
            android:id="@+id/tvUpcomingDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Details: Party of 2 â€¢ Premium tasting package"
            android:fontFamily="serif"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvUpcomingDate"
            app:layout_constraintStart_toStartOf="@id/tvUpcomingName"
            app:layout_constraintEnd_toEndOf="@id/tvUpcomingName" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Empty-state text -->
    <TextView
        android:id="@+id/emptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have no upcoming tours"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tabContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Hard-coded past tour card -->
    <!-- Grey bottom bar background -->

    <!-- Past tour card -->
    <LinearLayout
        android:id="@+id/pastTourCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tabContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mission Hill image on the left -->
        <ImageView
            android:id="@+id/imgPastTour"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mission_hill" />
        <!-- ^ change to the exact filename of your drawable -->

        <!-- Text + button on the right -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tourName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mission Hill Family Estate"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tourDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Date: Apr 12, 2024"
                android:fontFamily="serif"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tourName"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tourDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Details: Premium tasting package"
                android:fontFamily="serif"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tourDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Leave Review bottom-left inside the card -->
            <Button
                android:id="@+id/btnLeaveReview"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="Leave Review"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:backgroundTint="#9856AD"
                app:layout_constraintTop_toBottomOf="@id/tourDetails"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


   <!-- <View
        android:id="@+id/bottomBarBackground"
        android:layout_width="412dp"
        android:layout_height="68dp"
        android:background="#D3D3D3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" /> -->

    <!-- Home button -->
    <LinearLayout
        android:id="@+id/bottomBarBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9"
        android:gravity="center"
        android:paddingBottom="18dp"
        android:background="#9E7BB5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/mytours_home_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="â¾•\nHome"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="sans-serif-smallcaps"
            android:backgroundTint="#9E7BB5"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <!-- My tours button -->
        <Button
            android:id="@+id/mytours_my_tours_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðƒ¯\nMy Tours"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="sans-serif-smallcaps"
            android:backgroundTint="#9E7BB5"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <!-- Profile button -->
        <Button
            android:id="@+id/mytours_profile_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="áŒ¸\nProfile"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="sans-serif-smallcaps"
            android:backgroundTint="#9E7BB5"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
