<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8BFD8"
    tools:context=".ui.SelectToursActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Compare Tours"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select two tours to compare:"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSelectTours"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/btnSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search button ABOVE bottom bar -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:backgroundTint="#9856AD"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/rvSelectTours"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Bottom Navigation Bar Background -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9"
        android:gravity="center"
        android:paddingBottom="18dp"
        android:background="#9E7BB5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <!-- Home Button -->
        <Button
            android:id="@+id/SearchHomeButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="â¾•\nHome"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="sans-serif-smallcaps"
            android:backgroundTint="#9E7BB5"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <!-- My Tours Button -->
        <Button
            android:id="@+id/SearchMyToursButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðƒ¯\nMy Tours"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="sans-serif-smallcaps"
            android:backgroundTint="#9E7BB5"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <!-- Profile Button -->
        <Button
            android:id="@+id/ProfileButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="áŒ¸\nProfile"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="sans-serif-smallcaps"
            android:backgroundTint="#9E7BB5"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
