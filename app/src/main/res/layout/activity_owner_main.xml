<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F7F2FB">

    <!-- Title -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The OK Wine Experience"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <!-- Cards Row (centered vertically between title and bottom nav) -->
    <LinearLayout
        android:id="@+id/cardRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCreateListing"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#E5D9F8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Create\nyour\nlisting"
                android:gravity="center"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardManageListings"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#E5D9F8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Manage\nyour\nlisting"
                android:gravity="center"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9"
        android:gravity="center"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/HomeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/MyToursButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Tours"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/ProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>