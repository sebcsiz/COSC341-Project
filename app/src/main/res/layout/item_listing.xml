<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivListingImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvListingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Active"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rounded_text_box"/>

            <TextView
                android:id="@+id/tvListingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="24sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvListingDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description / Location"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvListingAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Address:"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvListingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration â²:"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvListingDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Duration:"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity:"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvListingCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Capacity:"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Awards ðŸ†:"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvListingAwards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Awards: None"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btnEditListing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit listing ðŸ› ï¸"
                android:fontFamily="serif"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#9856AD" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>